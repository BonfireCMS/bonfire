{{action-bar for="pages" newPage="newPage" toggleSideBar="toggleSideBar"}}
<div class="page__content">
  {{page-filter activeFilter=status updateFilter=(action "updateFilter") searchText=searchText}}
  <div class="page-list">
    {{#each filteredPages as |page|}}
    {{page-list-item for="pages" post=page newPage="newPage" editPage="editPage"}}
    {{/each}}
  </div>
</div>
