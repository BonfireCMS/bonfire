{{action-bar for="pages:edit" savePage=(action "savePage") toggleSideBar="toggleSideBar"}}
<div class="page__content">
  {{bf-editor-bar
  showContent=showContent
  showPreview=showPreview
  showSettings=showSettings
  toggleEditorState=(action "toggleEditorState")
  }}

  {{#if showContent}}
  <div class="bf-editor-box">
    <form class="form bf-editor__form">
      <div class="form__group">
        <label class="form__label">Title</label>
        {{input class="form__input bf-editor__input" value=title}}
      </div>
      {{bf-editor value=markdown parentController=this}}
    </form>
  </div>
  {{/if}}

  {{#if showPreview}}
  <div class="bf-preview-box">
    {{bf-editor-preview markdown=markdown parentController=this}}
  </div>
  {{/if}}

  {{#if showSettings}}
  <!-- settings -->
  {{/if}}
</div>
