{{action-bar for="posts" newPost="newPost"}}
<div class="content-wrapper">
  {{page-filter activeFilter=status updateFilter=(action "updateFilter") searchText=searchText}}
  <div class=="post-list">
    {{#each filteredPosts as |post|}}
    {{page-list-item for="posts" post=post newPost="newPost" editPost="editPost"}}
    {{/each}}
  </div>
</div>
