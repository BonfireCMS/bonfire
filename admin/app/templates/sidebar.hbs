        <span class="menu__item__text">Posts</span>
      </a>
      {{/link-to}}
      {{#link-to "themes.index" tagName="li" href=false class="menu__item"}}
      <a class="link link_menu" href="{{view.href}}">
        {{fa-icon icon="list-alt" class="icon"}}
        <span class="menu__item__text">Themes</span>
      </a>
      {{/link-to}}
      {{#link-to "settings" tagName="li" href=false class="menu__item"}}
