{
  "name": "bonfire",
  "version": "1.0.0",
  "description": "Backend api for BonfireCMS",
  "main": "index.js",
  "scripts": {
    "db": "npm run db:drop && npm run db:migrate",
    "db:drop": "sequelize db:migrate:undo:all",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo",
    "lint": "eslint .",
    "model": "sequelize model:create --name",
    "seed": "sequelize seed:create --name",
    "start": "supervisor .",
    "test": "mocha --recursive",
    "watch": "npm run test -- --watch"
  },
  "author": "Dylan Foster <dylan947@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "mocha": "^2.3.4",
    "sequelize-cli": "^2.3.1",
    "sinon": "^1.17.2",
    "supertest": "^1.1.0",
    "supervisor": "^0.9.1"
  },
  "dependencies": {
    "express": "^4.13.3",
    "express-busboy": "^2.4.5",
    "express-hbs": "^0.8.4",
    "express-namespace": "^0.1.1",
    "hbs": "^4.0.0",
    "include-all": "^0.1.6",
    "lodash": "^4.0.0",
    "path-match": "^1.2.3",
    "pg": "^4.4.3",
    "pg-hstore": "^2.3.2",
    "restify-errors": "^3.1.0",
    "sequelize": "^3.17.3"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "rules": {
      "comma-dangle": [0],
      "no-param-reassign": [0],
      "padded-blocks": [0],
      "quotes": [2, "double", "avoid-escape"]
    }
  }
}
